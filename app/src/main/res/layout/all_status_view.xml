<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPurple"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/allStatusVendor"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="TextView"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/allStatusId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="TextView"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"/>
    </LinearLayout>
    
    
    <TextView
        android:id="@+id/allStatusName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPurple"
        android:text="Package name"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/back">
        
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Deliver on"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/allStatusDeliveryTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Date"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="160dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Delivery Address"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/allStatusDelivery"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Address"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Pickup Address"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/allStatusPickup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Address"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Pickup On"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/allStatusPickupTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Date"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    
    <TextView
        android:id="@+id/allStatusSta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/back"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Status"
        android:textSize="12sp"/>

